#!/bin/bash

# Get the directory where the script resides
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Navigate to the script directory
cd "$DIR"

# Check for existence of requirements.txt
if [ ! -f requirements.txt ]; then
    echo "Error: requirements.txt does not exist in the directory."
    exit 1
fi

# Check if Python is installed and in PATH
if ! command -v python &> /dev/null; then
    echo "Error: Python is not installed or not in PATH."
    exit 1
fi

# Run setup.py and handle possible Python-related errors
if ! python setup.py; then
    echo "Python script returned an error."
    exit 1
fi

echo "Setup completed successfully."
